{
    "description": "ブラウザゲーム「艦隊これくしょん」の艦娘詳細をキャプチャ＆連結して生成します",
    "manifest_version": 2,
    "name": "Kancolle fleet capture",
    "homepage_url": "https://twitter.com/mtm13th",
    "version": "1.43",

    "background": {
        "scripts": [ "background.js" ]
    },

    "content_scripts": [
        {
            "matches": [
                "http://www.dmm.com/netgame/social/-/gadgets/=/app_id=854854/"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "*://*/kcs2/index.php*"
            ],
            "js": [
                "canvas.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },

    "permissions": [
        "downloads",
        "storage",
        "unlimitedStorage",
        "notifications"
    ]
}
